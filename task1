def log_calls(func):
    def wrapper(*args, **kwargs):
        # вхід
        args_str = ", ".join([repr(a) for a in args] +
                             [f"{k}={v!r}" for k, v in kwargs.items()])
        print(f"→ {func.__name__}({args_str})")

        result = func(*args, **kwargs)

        # вихід
        print(f"← {func.__name__} = {result!r}")
        return result
    return wrapper


@log_calls
def add(a: int, b: int) -> int:
    return a + b

print(add(2, 3))
